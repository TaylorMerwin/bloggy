<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.typekit.net/rko3hnw.css">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Bloggy</title>
</head>

<body>
  <header class="header">
    <h1>Bloggy</h1>
    <nav>
      <% if (!user) { %>
        <a href="/login">Login</a>
        <a href="/register">Create Account</a>
        <% } %>

          <% if (user) { %>
            <a href="/create">Create</a>
            <a href="/user">User</a>
            <a href="/logout">Logout</a>
            <% } %>
              <a href="https://github.com/TaylorMerwin/bloggy">About</a>

    </nav>
  </header>
  <p class="text-red-600">Welcome to Tailwindcss!!!!</p>


  <div class="flex flex-col align-middle ">

    <% posts.slice().reverse().forEach(function(post) { %>

      <% let date=new Date(post.created_at); let formattedDate=date.toLocaleDateString('en-US', { month: 'long' ,
        day: 'numeric' , year: 'numeric' }); %>

        <a href="/view/<%= post.post_id%>">
          <div class="card max-w-md bg-white rounded-lg border border-gray-200 shadow-md">
            <img class="rounded-t-lg" src="https://storage.googleapis.com/bloggy-images/<%= post.image_path%>"
              alt="Card Image" />
            <div class="p-5">
              <p class="text-gray-700 text-sm"><span class="font-semibold">
                  <%= post.author_name %>
                </span> -
                <%= formattedDate %>
              </p>
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                <%= post.title %>
              </h5>
              <p class="mb-3 font-normal text-gray-700">
                <%= post.post_description %>
              </p>
            </div>
          </div>
        </a>
        <% }); %>

  </div>
</body>

</html>